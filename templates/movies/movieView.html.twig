{% extends 'base.html.twig' %}

{% block title %}CRUD Movie{% endblock %}

{% block body %}
    <h1>Movies view</h1>
    {{ movie.id }}
    {{ movie.title }}
    {{ movie.releaseat|date('d-m-Y') }}
    {{ movie.synopsis }}
    {{ movie.productor.firstname }} {{ movie.productor.name }}
    {% for categorie in movie.categories %}
        {{ categorie.title }},
    {% endfor %}
{% endblock %}